  "compilerOptions": {
    "lib": ["es6"],
    "allowJs": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "ES2015",
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["src/tests"]
}
